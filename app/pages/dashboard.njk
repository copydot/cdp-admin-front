            <h5 class="text-uppercase">Ingresantes</h5>
          </a>
        </div>
        <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
          <a href="charts.html" class="btn btn-lg btn-info mb-3 p-5 btn-block">
            <i class="fas fa-chart-area fa-2x d-block mb-3"></i>
            <h5 class="text-uppercase">Analitycs</h5>
          </a>
        </div>
