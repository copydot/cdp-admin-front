<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
<div>
  <div class="container">

    <div class="heading heading-large heading-border">
      Eventos
    </div>

    <section>
      <div class="row ">

        <div class="col-12- col-md-8">
          <div class="heading heading-small">
            Ingrese nuevo evento
          </div>

          <form>

            <div class="form-group">
              <label for="">Titulo</label>
              <input type="text" name="" value="" class="form-control">
            </div>

            <div class="row">
              <div class="col-12 col-md-4">
                <div class="form-group">
                  <label for="">Fecha Evento</label>
                  <input type="date" name="" value="" class="form-control">
                </div>
              </div>
              <div class="col-12 col-md-4">
                <div class="form-group">
                  <label for="">Fecha Vencimiento</label>
                  <input type="date" name="" value="" class="form-control">
                </div>
              </div>
              <div class="col-12 col-md-4">
                <div class="form-group">
                  <label for="">Hora Vencimiento</label>
                  <input type="time" name="" value="" class="form-control">
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="">Descripción</label>
              <textarea name="name" rows="8" cols="80" class="form-control"></textarea>
            </div>
            <br>

            <a href="./dashboard.html" class="btn btn-secondary">Cancelar</a>
            <button type="button" class="btn btn-primary btn-lg float-right">Crear evento</button>

          </form>

        </div>
        <div class="col-12 col-md-4">
          <div class="heading heading-small">
            Próximos eventos
          </div>
          <div class="card mb-4">
            <div class="card-body">
              <p>JUNIO 2018</p>
              <h3 class="card-title">SÁBADO 9</h3>
              <hr>
              <p>Listas creadas <span class="badge badge-success">1</span></p>
            </div>
          </div>
          <div class="card mb-4">
            <div class="card-body">
              <p>JUNIO 2018</p>
              <h3 class="card-title">SÁBADO 15</h3>
              <hr>
              <p>Listas creadas <span class="badge badge-secondary">0</span></p>
            </div>
          </div>
        </div>

      </div>
    </section>
  </div>
</div>
{% endblock %}
