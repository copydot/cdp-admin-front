{% extends "layout.njk" %}

{% block title %}Lista de Invitados{% endblock %}

{% block content %}
<div class="container">

  <section>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Ingresantes</li>
        <li class="breadcrumb-item"><a href="entry-event.html">Eventos</a></li>
        <li class="breadcrumb-item"><a href="entry-list.html">Listas</a></li>
        {# <li class="breadcrumb-item active" aria-current="page">Listas</li> #}
      </ol>
    </nav>

		<div class="heading heading-sm mb-0">
			<div class="d-flex flex-column flex-sm-row flex-nowrap">
				<div class="order-sm-2 pb-2"><a href="entry-list.html" class="btn btn-sm btn-light text-uppercase">Volver</a></div>
				<div class="order-sm-1 flex-grow-1">
          <span class="bg-danger text-white text-uppercase px-1">Luis Miguel - No se tu pero yo</span>
          <span class="bg-info text-white text-uppercase px-1">Gallery</span>
        </div>
			</div>
		</div>


    <div class=" mb-3 py-3 ">
      <div class="table-responsive">
        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
          <thead>
            <tr>
              <th>Control de Ingreso</th>
              <th>DNI</th>
              <th class="d-none d-sm-block">Sexo</th>
            </tr>
          </thead>
          <tbody>
            {% for i in range(01, 150) %}
            <tr>
              <td class="py-3 px-2">
                <div class="d-flex align-items-center">
                  <label class="switch">
                    <input type="checkbox" name="checked-{{1}}" id="checked-{{i}}">
                    <span class="slider round"></span>
                  </label>
                  APELLIDO{{ i }}, Nombre
                  {% if i == 1 %}
                  <span id="update-guest-1" class="text-success ml-2"> <span class="d-none d-md-inline">actualizado</span> <i class="fas fa-check"></i></span>
                  {% endif %}
                  {% if i == 2 %}
                  <span id="update-guest-2" class="text-danger ml-2"> <span class="d-none d-md-inline">error</span> <i class="fas fa-exclamation"></i></span>
                  {% endif %}
                </div>
              </td>
              <td  class="py-3 px-2">12345678</td>
              <td class="d-none d-sm-block">
                {% if i < 90 %}
                  FEMENINO
                {% else %}
                  HOMBRE
                {% endif %}
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

  </section>

</div>
{% endblock %}

{% block js %}
  <script type="text/javascript">
  // datatables
  $(document).ready(function() {
    $('#datatable').DataTable({
      "order": [[ 1, "asc" ]],
      "lengthMenu": [[ -1, 10, 25, 50], ["All", 10, 25, 50]],
      "language": {
          "lengthMenu": "_MENU_",
          "search": "Buscar:",
          "zeroRecords":    "No se encontraron registros coincidentes",
          "info": "_PAGE_ de _PAGES_",
          "infoEmpty": "No hay registros disponibles",
          "infoFiltered": "(filtrado de _MAX_ registros totales)",
      "paginate": {
          "first":      "<<",
          "last":       ">>",
          "next":       ">",
          "previous":   "<"
      },

      }
    });

    $("#update-guest-1").hide();
    $("#checked-1").on( 'change', function() {
      setTimeout(function() {
        $("#update-guest-1").show();
      },100);
      setTimeout(function() {
        $("#update-guest-1").fadeOut(300);
      },1000);
    });
    $("#update-guest-2").hide();
    $("#checked-2").on( 'change', function() {
      setTimeout(function() {
        $("#update-guest-2").show();
      },100);
      setTimeout(function() {
        $("#update-guest-2").fadeOut(300);
      },1000);
    });

  });
  </script>
{% endblock %}
